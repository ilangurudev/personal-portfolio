<!-- Viewfinder Corners Icon (for hover effects) -->
<svg id="icon-viewfinder" class="photo-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: none;">
  <path d="M4 4H8V8H4V4Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
  <path d="M16 4H20V8H16V4Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
  <path d="M4 16H8V20H4V16Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
  <path d="M16 16H20V20H16V16Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
</svg>

<script>
  // Clone and inject SVG icons on demand
  function getIcon(id: string): string {
    const template = document.getElementById(id);
    if (!template) return '';
    
    const clone = template.cloneNode(true) as SVGElement;
    clone.removeAttribute('id');
    clone.removeAttribute('style');
    clone.classList.add('photo-icon-inline');
    
    const wrapper = document.createElement('div');
    wrapper.appendChild(clone);
    return wrapper.innerHTML;
  }
  
  // Make function available globally
  (window as any).getPhotoIcon = getIcon;
</script>

<style>
  .photo-icon {
    display: none;
  }
  
  .photo-icon-inline {
    display: inline-block;
    vertical-align: middle;
    width: 1em;
    height: 1em;
    margin-right: 0.25em;
  }
</style>

