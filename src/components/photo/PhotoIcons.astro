<!-- Camera/Lens Icon -->
<svg id="icon-camera" class="photo-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: none;">
  <rect x="4" y="7" width="16" height="12" rx="2" stroke="currentColor" stroke-width="1.5"/>
