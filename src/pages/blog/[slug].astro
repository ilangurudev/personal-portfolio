---
import { getCollection, render } from 'astro:content';
import BlogLayout from '../../layouts/BlogLayout.astro';
import TagPills from '../../components/TagPills.astro';
import TableOfContents from '../../components/react/TableOfContents';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries
    .filter(entry => entry.slug !== 'about')
    .map(entry => ({
      params: { slug: entry.slug },
      props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content, headings } = await render(entry);
---

<BlogLayout title={entry.data.title} description={entry.data.description}>
  <TableOfContents headings={headings} client:load />
  <article class="blog-post">
    <div class="terminal-header">
      <span class="command-prompt">$ cat {entry.slug}.md</span>
    </div>
    
    <header class="post-header">
      <h1>{entry.data.title}</h1>
      <div class="meta">
        <time datetime={entry.data.date.toISOString()}>
          {entry.data.date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        <TagPills tags={entry.data.tags} />
      </div>
    </header>

    <div class="prose">
      <Content />
    </div>
  </article>
</BlogLayout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
  }

  .terminal-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--slate-800);
  }

  .command-prompt {
    color: var(--terminal-cyan);
    font-size: 0.9rem;
    font-weight: 500;
  }

  .command-prompt::after {
    content: '';
    display: inline-block;
    width: 8px;
    height: 14px;
    background: var(--terminal-green);
    margin-left: 4px;
    animation: blink 1s step-end infinite;
  }

  .post-header {
    margin-bottom: 3rem;
  }

  .post-header h1 {
    color: var(--terminal-green);
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-shadow: 0 0 10px rgba(34, 197, 94, 0.3);
  }

  .meta {
    display: flex;
    gap: 1.5rem;
    color: var(--terminal-gray);
    font-family: 'Fira Code', monospace;
    font-size: 0.9rem;
  }

  /* Markdown Prose Styling - Inherited from BlogLayout mostly, but ensuring specifics */
  .prose {
    color: var(--terminal-gray);
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .prose :global(p) {
    margin: 0 0 1.4rem;
  }

  .prose :global(h2) {
    color: var(--terminal-cyan);
    font-size: 1.8rem;
    margin: 2.5rem 0 1rem;
  }

  .prose :global(h3) {
    color: var(--terminal-yellow);
    font-size: 1.4rem;
    margin: 2rem 0 1rem;
  }

  .prose :global(pre) {
    background: var(--slate-900) !important;
    border: 1px solid var(--slate-800);
    border-radius: 8px;
    padding: 1.5rem;
    margin: 2rem 0;
    overflow-x: auto;
  }

  .prose :global(code) {
    font-family: 'JetBrains Mono', monospace;
  }

  .prose :global(p > code) {
    background: rgba(6, 182, 212, 0.1);
    color: var(--terminal-cyan);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .prose :global(ul) {
    list-style: none;
    padding-left: 1.5rem;
  }

  .prose :global(li) {
    position: relative;
    margin: 0.5rem 0;
  }

  .prose :global(li::before) {
    content: '>';
    position: absolute;
    left: -1.5rem;
    color: var(--terminal-cyan);
  }

  .prose :global(a) {
    color: var(--terminal-cyan);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all 0.3s ease;
  }

  .prose :global(a:hover) {
    color: var(--terminal-yellow);
    border-bottom-color: var(--terminal-yellow);
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }
</style>
