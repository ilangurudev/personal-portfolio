---
import PhotoLayout from '../../layouts/PhotoLayout.astro';
import { getFeaturedPhotosWithExif, sortPhotos, transformForLightbox } from '../../utils/photo-helpers';
import { getPhotoUrl, getResizedPhotoUrl } from '../../utils/url-helper';
import PhotoLightbox from '../../components/photo/PhotoLightbox.astro';
import PhotoAbout from '../../components/photo/PhotoAbout.astro';
import PhotoIcons from '../../components/photo/PhotoIcons.astro';
import ViewfinderSVG from '../../components/photo/ViewfinderSVG.astro';
import { getCollection } from 'astro:content';

const albums = await getCollection('albums');
const albumTitleMap = new Map(albums.map(a => [a.slug, a.data.title]));

const featuredPhotos = await getFeaturedPhotosWithExif();
const sortedPhotos = sortPhotos(featuredPhotos);
---

<PhotoLayout title="Best Photos" description="Featured photography by Guru">
  <PhotoIcons />
  <PhotoAbout />

  <div class="photo-hero">
    <h1 class="hero-title">The Edit</h1>
    <p class="hero-subtitle">
      Photos I consider <del>perfect</del> not too bad.
    </p>
  </div>

  <!-- Filter Toggle Group -->
  <div class="filter-toggle-group">
    <button
      type="button"
      class="filter-toggle-option active"
      data-filter="all"
    >
      All
    </button>
    <button
      type="button"
      class="filter-toggle-option"
      data-filter="street"
    >
      Street
    </button>
    <button
      type="button"
      class="filter-toggle-option"
      data-filter="landscape"
    >
      Landscape
    </button>
  </div>

  {sortedPhotos.length === 0 ? (
    <div class="no-photos">
      <p class="no-photos-text">
        No featured photos yet. Mark photos as featured to see them here.
      </p>
    </div>
  ) : (
    <>
      <div class="photos-grid">
        {sortedPhotos.map((photo) => (
          <div 
            class="photo-card"
            data-photo-id={photo.id}
            data-order-score={photo.data.order_score ?? 0}
            data-photo-date={photo.data.date?.toISOString?.() || photo.data.date}
          >
            <div class="photo-image">
              <img
                src={getResizedPhotoUrl(photo.data.filename, 600)}
                alt={photo.data.title}
                loading="lazy"
                style={`object-position: center ${photo.data.position || 'top'};`}
              />
              <div class="viewfinder-overlay">
                <ViewfinderSVG />
              </div>
            </div>
          </div>
        ))}
      </div>
      <PhotoLightbox photos={sortedPhotos.map(p => transformForLightbox(p, albumTitleMap))} />
    </>
  )}

  <script type="module">
    import { normalizeTag } from '../../utils/client/tag-utils';
    window.photoTagUtils = { normalizeTag };
  </script>

  <script define:vars={{
    allPhotosData: sortedPhotos.map(p => ({
      id: p.id,
      url: getPhotoUrl(p.data.filename),
      body: p.body || '',
      data: {
        title: p.data.title,
        filename: p.data.filename,
        album: p.data.album,
        albumTitle: albumTitleMap.get(p.data.album),
        tags: p.data.tags,
        camera: p.data.camera,
        settings: p.data.settings,
        focalLength: p.data.focalLength,
        location: p.data.location
      }
    })),
    sortedPhotos
  }}>
    // Store for lightbox updates
    window.allPhotosData = allPhotosData;

    // Filter toggle functionality
    document.addEventListener('DOMContentLoaded', () => {
      const toggleButtons = document.querySelectorAll('.filter-toggle-option');
      const photoCards = document.querySelectorAll('.photo-card');

      const normalizeTag =
        (window.photoTagUtils && window.photoTagUtils.normalizeTag) ||
        ((tag) => String(tag ?? '').toLowerCase().trim());

      // Apply filter based on selection
      function applyFilter(filter) {
        let visibleCount = 0;

        photoCards.forEach((card, index) => {
          const photo = sortedPhotos[index];
          const photoTags = (photo.data.tags || []).map(t => normalizeTag(t));

          let shouldShow = false;

          if (filter === 'all') {
            shouldShow = true;
          } else if (filter === 'street') {
            shouldShow = photoTags.includes('street photography');
          } else if (filter === 'landscape') {
            shouldShow = photoTags.includes('landscape photography');
          }

          if (shouldShow) {
            card.style.display = '';
            visibleCount++;
          } else {
            card.style.display = 'none';
          }
        });

        // Update lightbox with filtered photos
        if (window.photoLightbox) {
          const filteredPhotos = sortedPhotos.filter((photo, index) => {
            const photoTags = (photo.data.tags || []).map(t => normalizeTag(t));
            if (filter === 'all') return true;
            if (filter === 'street') return photoTags.includes('street photography');
            if (filter === 'landscape') return photoTags.includes('landscape photography');
            return false;
          }).map(photo => {
            // Map to full photo object with URL from the initial lightbox data
            const fullPhoto = window.allPhotosData?.find(p => p.id === photo.id);
            return fullPhoto || photo; // Fallback to original if not found
          });
          window.photoLightbox.updatePhotos(filteredPhotos);
        }
      }

      // Add click handlers to toggle buttons
      toggleButtons.forEach(button => {
        button.addEventListener('click', () => {
          // Remove active class from all buttons
          toggleButtons.forEach(btn => btn.classList.remove('active'));

          // Add active class to clicked button
          button.classList.add('active');

          // Apply the filter
          const filter = button.getAttribute('data-filter');
          applyFilter(filter);
        });
      });

      // Initialize with 'all' filter
      applyFilter('all');
    });
  </script>

  <!-- Navigation links after photos -->
  <div class="photo-nav-section">
    <h2 class="nav-section-title">Explore More</h2>
    <div class="photo-nav-links">
      <a href="/photography/photos" class="photo-nav-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 3H2l8 9.46V19l4 2v-8.54L22 3z"/>
        </svg>
        <span>Browse All Photos</span>
      </a>
      <a href="/photography/albums" class="photo-nav-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/>
        </svg>
        <span>View Albums</span>
      </a>
      <a href="/photography/tags" class="photo-nav-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"/>
          <line x1="7" y1="7" x2="7.01" y2="7"/>
        </svg>
        <span>Browse by Tag</span>
      </a>
    </div>
  </div>

  <style>
    .photo-hero {
      text-align: center;
      max-width: 800px;
      margin: 0 auto 2rem;
      padding: 2rem 0 1rem;
    }

    .filter-toggle-group {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 0;
      margin: 0 auto 2rem;
      background: rgba(28, 25, 23, 0.05);
      border-radius: 24px;
      padding: 4px;
      width: auto;
    }

    .filter-toggle-option {
      flex: 1;
      padding: 0.5rem 1.5rem;
      border: none;
      background: transparent;
      color: var(--gray);
      font-size: 0.9375rem;
      font-weight: 500;
      cursor: pointer;
      border-radius: 20px;
      transition: all 0.2s ease;
      white-space: nowrap;
      text-align: center;
      min-width: 110px;
    }

    .filter-toggle-option:hover {
      color: var(--charcoal);
      background: rgba(28, 25, 23, 0.05);
    }

    .filter-toggle-option.active {
      background: var(--amber);
      color: white;
      box-shadow: 0 2px 8px rgba(245, 158, 11, 0.3);
    }

    .hero-title {
      font-family: 'Crimson Text', serif;
      font-size: 3.5rem;
      font-weight: 700;
      color: var(--charcoal);
      margin: 0 0 1.5rem;
      letter-spacing: -0.03em;
      line-height: 1.1;
    }

    .hero-subtitle {
      font-size: 1.25rem;
      color: var(--gray);
      font-weight: 300;
      line-height: 1.6;
      font-style: italic;
      margin: 0;
    }

    .photo-nav-section {
      max-width: 900px;
      margin: 4rem auto;
      padding: 3rem 0;
      text-align: center;
      border-top: 1px solid rgba(28, 25, 23, 0.1);
    }

    .nav-section-title {
      font-family: 'Crimson Text', serif;
      font-size: 2rem;
      font-weight: 600;
      color: var(--charcoal);
      margin: 0 0 2rem;
      letter-spacing: -0.02em;
    }

    .photo-nav-links {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem;
    }

    .photo-nav-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      background: white;
      color: var(--charcoal);
      text-decoration: none;
      border: 1px solid rgba(28, 25, 23, 0.2);
      border-radius: 4px;
      font-size: 0.9375rem;
      font-weight: 500;
      transition: all 0.2s ease;
    }

    .photo-nav-link:hover {
      background: var(--amber);
      color: white;
      border-color: var(--amber);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
    }

    .photo-nav-link svg {
      flex-shrink: 0;
    }

    .no-photos {
      text-align: center;
      padding: 4rem 2rem;
      background: var(--cream-dark);
      border-radius: 4px;
      max-width: 600px;
      margin: 0 auto;
    }

    .no-photos-text {
      font-size: 1.125rem;
      color: var(--charcoal);
      margin: 0;
      font-weight: 400;
    }

    .photos-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
      margin-top: 2rem;
    }

    /* Photo card styles imported via PhotoLayout from photo-card.css */

    @media (max-width: 768px) {
      .hero-title {
        font-size: 2.5rem;
      }

      .hero-subtitle {
        font-size: 1.125rem;
      }

      .photos-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }

      .no-photos {
        padding: 3rem 1.5rem;
      }
    }
  </style>
</PhotoLayout>
