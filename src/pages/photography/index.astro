---
import PhotoLayout from '../../layouts/PhotoLayout.astro';
import { getFeaturedPhotosWithExif } from '../../utils/photo-helpers';
import { getPhotoUrl, getResizedPhotoUrl } from '../../utils/url-helper';
import PhotoLightbox from '../../components/photo/PhotoLightbox.astro';
import PhotoAbout from '../../components/photo/PhotoAbout.astro';
import PhotoIcons from '../../components/photo/PhotoIcons.astro';
import { getCollection } from 'astro:content';

const albums = await getCollection('albums');
const albumTitleMap = new Map(albums.map(a => [a.slug, a.data.title]));

const featuredPhotos = await getFeaturedPhotosWithExif();
const sortedPhotos = featuredPhotos.sort((a, b) => 
  b.data.date.getTime() - a.data.date.getTime()
);
---

<PhotoLayout title="Best Photos" description="Featured photography by Guru">
  <PhotoIcons />
  <PhotoAbout />

  <div class="photo-hero">
    <h1 class="hero-title">The Edit</h1>
    <p class="hero-subtitle">
      Photos I consider <del>perfect</del> not too bad.
    </p>
  </div>

  {sortedPhotos.length === 0 ? (
    <div class="no-photos">
      <p class="no-photos-text">
        No featured photos yet. Mark photos as featured to see them here.
      </p>
    </div>
  ) : (
    <>
      <div class="photos-grid">
        {sortedPhotos.map((photo) => (
          <div 
            class="photo-card"
            data-photo-id={photo.id}
          >
            <div class="photo-image">
              <img
                src={getResizedPhotoUrl(photo.data.filename, 400)}
                alt={photo.data.title}
                loading="lazy"
                style={`object-position: center ${photo.data.position || 'top'};`}
              />
              <div class="viewfinder-overlay">
                <svg class="viewfinder-corners" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <!-- Minimal corner brackets -->
                  <path d="M15 15 L15 25 L25 25" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M85 15 L85 25 L75 25" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M15 85 L15 75 L25 75" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M85 85 L85 75 L75 75" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </div>
          </div>
        ))}
      </div>
      <PhotoLightbox photos={sortedPhotos.map(p => ({
        ...p,
        data: { ...p.data, albumTitle: albumTitleMap.get(p.data.album) }
      }))} />
    </>
  )}

  <!-- Navigation links after photos -->
  <div class="photo-nav-section">
    <h2 class="nav-section-title">Explore More</h2>
    <div class="photo-nav-links">
      <a href="/photography/photos" class="photo-nav-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 3H2l8 9.46V19l4 2v-8.54L22 3z"/>
        </svg>
        <span>Browse All Photos</span>
      </a>
      <a href="/photography/albums" class="photo-nav-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/>
        </svg>
        <span>View Albums</span>
      </a>
      <a href="/photography/tags" class="photo-nav-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"/>
          <line x1="7" y1="7" x2="7.01" y2="7"/>
        </svg>
        <span>Browse by Tag</span>
      </a>
    </div>
  </div>

  <style>
    .photo-hero {
      text-align: center;
      max-width: 800px;
      margin: 0 auto 2rem;
      padding: 2rem 0 1rem;
    }

    .hero-title {
      font-family: 'Crimson Text', serif;
      font-size: 3.5rem;
      font-weight: 700;
      color: var(--charcoal);
      margin: 0 0 1.5rem;
      letter-spacing: -0.03em;
      line-height: 1.1;
    }

    .hero-subtitle {
      font-size: 1.25rem;
      color: var(--gray);
      font-weight: 300;
      line-height: 1.6;
      font-style: italic;
      margin: 0;
    }

    .photo-nav-section {
      max-width: 900px;
      margin: 4rem auto;
      padding: 3rem 0;
      text-align: center;
      border-top: 1px solid rgba(28, 25, 23, 0.1);
    }

    .nav-section-title {
      font-family: 'Crimson Text', serif;
      font-size: 2rem;
      font-weight: 600;
      color: var(--charcoal);
      margin: 0 0 2rem;
      letter-spacing: -0.02em;
    }

    .photo-nav-links {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem;
    }

    .photo-nav-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      background: white;
      color: var(--charcoal);
      text-decoration: none;
      border: 1px solid rgba(28, 25, 23, 0.2);
      border-radius: 4px;
      font-size: 0.9375rem;
      font-weight: 500;
      transition: all 0.2s ease;
    }

    .photo-nav-link:hover {
      background: var(--amber);
      color: white;
      border-color: var(--amber);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
    }

    .photo-nav-link svg {
      flex-shrink: 0;
    }

    .no-photos {
      text-align: center;
      padding: 4rem 2rem;
      background: var(--cream-dark);
      border-radius: 4px;
      max-width: 600px;
      margin: 0 auto;
    }

    .no-photos-text {
      font-size: 1.125rem;
      color: var(--charcoal);
      margin: 0;
      font-weight: 400;
    }

    .photos-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 2rem;
      margin-top: 2rem;
    }

    .photo-card {
      display: flex;
      flex-direction: column;
      text-decoration: none;
      color: inherit;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      border-radius: 4px;
      overflow: hidden;
      background: var(--cream-dark);
      cursor: crosshair;
      position: relative;
    }

    .photo-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .photo-image {
      width: 100%;
      aspect-ratio: 3 / 2;
      overflow: hidden;
      background: var(--cream);
      position: relative;
    }

    .photo-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .photo-card:hover .photo-image img {
      transform: scale(1.05);
    }

    .viewfinder-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      pointer-events: none;
      opacity: 0;
      transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .photo-card:hover .viewfinder-overlay {
      opacity: 1;
    }

    .viewfinder-corners {
      width: 85%;
      height: 85%;
      color: rgba(255, 255, 255, 0.85);
      animation: viewfinderFocus 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      transition: color 0.2s ease, transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Focus lock animation state */
    :global(.viewfinder-corners.focus-locked) {
      color: #22c55e !important;
      transform: scale(0.95);
      opacity: 1 !important;
    }

    /* Ensure overlay is visible during focus lock */
    :global(.photo-card .viewfinder-overlay:has(.focus-locked)) {
      opacity: 1 !important;
    }

    @keyframes viewfinderFocus {
      from {
        opacity: 0;
        transform: scale(1.1);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    @media (max-width: 768px) {
      .hero-title {
        font-size: 2.5rem;
      }

      .hero-subtitle {
        font-size: 1.125rem;
      }

      .photos-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }

      .no-photos {
        padding: 3rem 1.5rem;
      }
    }
  </style>
</PhotoLayout>
