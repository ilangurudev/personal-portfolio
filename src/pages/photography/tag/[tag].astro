---
import PhotoLayout from '../../../layouts/PhotoLayout.astro';
import { getPhotosWithExif } from '../../../utils/photo-helpers';
import { getPhotoUrl } from '../../../utils/url-helper';
import PhotoLightbox from '../../../components/photo/PhotoLightbox.astro';
import { getCollection } from 'astro:content';
import { FilteredPhotoGallery } from '../../../components/react/FilteredPhotoGallery';

export async function getStaticPaths() {
  const allPhotos = await getPhotosWithExif();
  
  // Collect all unique tags from all photos (use original casing for URL)
  const tagMap = new Map<string, string>(); // lowercase -> original
  allPhotos.forEach(photo => {
    photo.data.tags.forEach(tag => {
      if (tag) {
        const lowerTag = tag.toLowerCase();
        // Store original casing if not already stored
        if (!tagMap.has(lowerTag)) {
          tagMap.set(lowerTag, tag);
        }
      }
    });
  });
  
  // Return paths for each unique tag (Astro handles URL encoding automatically)
  return Array.from(tagMap.values()).map(tag => ({
    params: { tag },
  }));
}

const { tag } = Astro.params;
const decodedTag = decodeURIComponent(tag || '');

const albums = await getCollection('albums');
const albumTitleMap = new Map(albums.map(a => [a.slug, a.data.title]));

const allPhotos = await getPhotosWithExif();

// Get all unique tags for the filter pills
const allTagsSet = new Set<string>();
allPhotos.forEach(photo => {
  photo.data.tags.forEach(t => {
    allTagsSet.add(t.toLowerCase());
  });
});
const allTags = Array.from(allTagsSet).sort();

const filteredPhotos = allPhotos.filter(photo =>
  photo.data.tags.some(t => t.toLowerCase() === decodedTag.toLowerCase())
);
const sortedPhotos = filteredPhotos.sort((a, b) =>
  b.data.date.getTime() - a.data.date.getTime()
);
---

<PhotoLayout title={`${decodedTag} Photos`} description={`Photos tagged with ${decodedTag}`}>
  <div class="tag-page">
    <div class="tag-header">
      <h1 class="tag-title">#{decodedTag.toLowerCase()}</h1>
      <p class="tag-count" id="photo-count">{sortedPhotos.length} {sortedPhotos.length === 1 ? 'photo' : 'photos'}</p>
    </div>

    <!-- Tag Filter Pills -->
    <div class="tag-filter-bar">
      <button class="filter-toggle" id="filter-toggle" type="button">
        <span class="filter-toggle-text">Refine by tags</span>
        <svg class="filter-toggle-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <div class="tag-pills-container" id="tag-pills-container">
        <div class="tag-pills" id="tag-pills">
          {allTags.map((t) => (
            <button
              class={`tag-pill ${t === decodedTag.toLowerCase() ? 'active' : ''}`}
              data-tag={t}
              type="button"
            >
              #{t}
            </button>
          ))}
        </div>
        <button class="clear-filters" id="clear-filters" style="display: none;">
          Clear filters
        </button>
      </div>
    </div>

    {sortedPhotos.length === 0 ? (
      <p class="no-photos">No photos found with this tag.</p>
    ) : (
      <>
        <div class="gallery-container" style="display: flex; flex-direction: column; height: calc(100vh - 400px); min-height: 600px; max-height: calc(100vh - 400px);">
          <FilteredPhotoGallery 
            client:load
            allPhotos={allPhotos.map(p => ({
              ...p,
              data: {
                ...p.data,
                date: p.data.date.toISOString()
              }
            }))}
            initialActiveTags={[decodedTag.toLowerCase()]}
          />
        </div>
        <PhotoLightbox photos={sortedPhotos.map(p => ({
          ...p,
          data: { ...p.data, albumTitle: albumTitleMap.get(p.data.album) }
        }))} />
      </>
    )}
  </div>

  <script define:vars={{
    allPhotosData: allPhotos.map(p => ({
      id: p.id,
      url: getPhotoUrl(p.data.filename),
      data: {
        title: p.data.title,
        filename: p.data.filename,
        album: p.data.album,
        albumTitle: albumTitleMap.get(p.data.album),
        tags: (p.data.tags || []).map(t => (t || '').trim()).filter(t => t),
        camera: p.data.camera,
        settings: p.data.settings,
        focalLength: p.data.focalLength,
        location: p.data.location
      }
    }))
  }}></script>

  <style>
    .tag-page {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem 1.5rem;
    }

    .tag-header {
      text-align: center;
      margin-bottom: 2rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid rgba(28, 25, 23, 0.1);
    }

    .tag-filter-bar {
      margin-bottom: 3rem;
      background: var(--cream-dark);
      border-radius: 8px;
      overflow: hidden;
    }

    .filter-toggle {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 1rem 1.25rem;
      background: transparent;
      border: none;
      color: var(--charcoal);
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s ease;
      font-family: inherit;
    }

    .filter-toggle:hover {
      color: var(--amber);
    }

    .filter-toggle-icon {
      transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .filter-toggle.expanded .filter-toggle-icon {
      transform: rotate(180deg);
    }

    .tag-pills-container {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .tag-pills-container.expanded {
      max-height: 800px;
    }

    .tag-pills-container-inner {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1.5rem;
      padding: 0 1.25rem 1.25rem;
      flex-wrap: wrap;
    }

    .tag-pills {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
      padding: 0 1.25rem 1.25rem;
    }

    .tag-pill {
      padding: 0.5rem 1rem;
      border: 1.5px solid rgba(28, 25, 23, 0.2);
      border-radius: 20px;
      background: transparent;
      color: var(--charcoal);
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
      font-family: inherit;
    }

    .tag-pill:hover {
      border-color: var(--amber);
      transform: translateY(-2px);
      box-shadow: 0 2px 8px rgba(245, 158, 11, 0.15);
    }

    .tag-pill.active {
      background: var(--amber);
      border-color: var(--amber);
      color: white;
    }

    .clear-filters {
      padding: 0.5rem 1.25rem 1.25rem;
      border: none;
      background: transparent;
      color: var(--gray);
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      transition: color 0.2s ease;
      font-family: inherit;
      text-decoration: underline;
      white-space: nowrap;
      text-align: left;
      width: 100%;
    }

    .clear-filters:hover {
      color: var(--amber);
    }

    .tag-title {
      font-family: 'Crimson Text', serif;
      font-size: 3.5rem;
      font-weight: 700;
      color: var(--charcoal);
      margin: 0 0 0.5rem;
      letter-spacing: -0.02em;
    }

    .tag-count {
      color: var(--gray);
      font-size: 1rem;
      font-weight: 400;
    }

    .no-photos {
      text-align: center;
      color: var(--gray);
      font-size: 1.125rem;
      padding: 4rem 2rem;
    }

    .gallery-container {
      margin-top: 2rem;
    }

    /* Global styles for React-rendered Photo Cards */
    :global(.photo-card) {
      display: flex;
      flex-direction: column;
      text-decoration: none;
      color: inherit;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      border-radius: 4px;
      overflow: hidden;
      background: var(--cream-dark);
      cursor: crosshair;
      position: absolute; /* React Window positions absolutely */
    }

    :global(.photo-card:hover) {
      transform: translateY(-4px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
      z-index: 10; /* Ensure hovered item is above */
    }

    :global(.photo-image) {
      width: 100%;
      height: 100%;
      overflow: hidden;
      background: var(--cream);
      position: relative;
    }

    :global(.photo-image img) {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    :global(.photo-card:hover .photo-image img) {
      transform: scale(1.05);
    }

    :global(.viewfinder-overlay) {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      pointer-events: none;
      opacity: 0;
      transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    :global(.photo-card:hover .viewfinder-overlay) {
      opacity: 1;
    }

    :global(.viewfinder-corners) {
      width: 85%;
      height: 85%;
      color: rgba(255, 255, 255, 0.85);
      animation: viewfinderFocus 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      transition: color 0.2s ease, transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Focus lock animation state */
    :global(.viewfinder-corners.focus-locked) {
      color: #22c55e !important;
      transform: scale(0.95);
      opacity: 1 !important;
    }

    /* Ensure overlay is visible during focus lock */
    :global(.photo-card .viewfinder-overlay:has(.focus-locked)) {
      opacity: 1 !important;
    }

    @keyframes viewfinderFocus {
      from {
        opacity: 0;
        transform: scale(1.1);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    @media (max-width: 768px) {
      .tag-title {
        font-size: 2.5rem;
      }

      .tag-filter-bar {
        padding: 1rem;
      }

      .tag-pills {
        gap: 0.5rem;
      }

      .tag-pill {
        font-size: 0.8rem;
        padding: 0.4rem 0.8rem;
      }

    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const tagPills = document.querySelectorAll('.tag-pill');
      const photoCount = document.getElementById('photo-count');
      const clearFiltersBtn = document.getElementById('clear-filters');
      const filterToggle = document.getElementById('filter-toggle');
      const tagPillsContainer = document.getElementById('tag-pills-container');
      const tagTitle = document.querySelector('.tag-title');
      const initialTag = document.querySelector('.tag-pill.active')?.getAttribute('data-tag');
      const initialTitle = tagTitle?.textContent || '';

      // Track active tags - will be managed by React component
      // This script just handles UI updates for tag pills and title
      
      // Update lightbox when filters change - will be called by React component
      (window as any).updateLightboxFromFilter = function(filteredPhotos: any[]) {
        if (!(window as any).photoLightbox) return;
        (window as any).photoLightbox.updatePhotos(filteredPhotos);
        
        // Update count
        if (photoCount) {
          photoCount.textContent = `${filteredPhotos.length} ${filteredPhotos.length === 1 ? 'photo' : 'photos'}`;
        }
      };

      // Toggle filter bar
      filterToggle?.addEventListener('click', () => {
        filterToggle.classList.toggle('expanded');
        tagPillsContainer?.classList.toggle('expanded');
      });

      // Tag pill click handler - will trigger React component update
      tagPills.forEach(pill => {
        pill.addEventListener('click', () => {
          const tag = pill.getAttribute('data-tag');
          const isActive = pill.classList.contains('active');

          if (isActive) {
            // Prevent removing the last tag
            const activeCount = document.querySelectorAll('.tag-pill.active').length;
            if (activeCount > 1) {
              pill.classList.remove('active');
              // Trigger React component update via custom event
              window.dispatchEvent(new CustomEvent('tagFilterChange', { 
                detail: { 
                  activeTags: Array.from(document.querySelectorAll('.tag-pill.active')).map(p => p.getAttribute('data-tag'))
                } 
              }));
            }
          } else {
            pill.classList.add('active');
            // Trigger React component update via custom event
            window.dispatchEvent(new CustomEvent('tagFilterChange', { 
              detail: { 
                activeTags: Array.from(document.querySelectorAll('.tag-pill.active')).map(p => p.getAttribute('data-tag'))
              } 
            }));
          }

          // Update title based on selected tags
          const activeTags = Array.from(document.querySelectorAll('.tag-pill.active')).map(p => p.getAttribute('data-tag'));
          if (tagTitle) {
            if (activeTags.length > 1) {
              const sortedTags = activeTags.sort();
              tagTitle.textContent = sortedTags.map(t => `#${t}`).join(' + ');
            } else if (activeTags.length === 1) {
              tagTitle.textContent = `#${activeTags[0]}`;
            } else {
              tagTitle.textContent = initialTitle;
            }
          }

          // Show/hide clear filters button
          if (clearFiltersBtn) {
            clearFiltersBtn.style.display = activeTags.length > 1 ? 'block' : 'none';
          }
        });
      });

      // Clear filters handler
      if (clearFiltersBtn) {
        clearFiltersBtn.addEventListener('click', () => {
          // Reset to initial tag only
          tagPills.forEach(pill => {
            const tag = pill.getAttribute('data-tag');
            if (tag === initialTag) {
              pill.classList.add('active');
            } else {
              pill.classList.remove('active');
            }
          });

          // Trigger React component update
          window.dispatchEvent(new CustomEvent('tagFilterChange', { 
            detail: { 
              activeTags: initialTag ? [initialTag] : []
            } 
          }));

          if (tagTitle) {
            tagTitle.textContent = initialTitle;
          }
          clearFiltersBtn.style.display = 'none';
        });
      }
    });
  </script>
</PhotoLayout>

