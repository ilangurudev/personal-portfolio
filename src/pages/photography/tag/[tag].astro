---
import PhotoLayout from '../../../layouts/PhotoLayout.astro';
import { getPhotosWithExif } from '../../../utils/photo-helpers';
import { getPhotoUrl } from '../../../utils/url-helper';
import PhotoLightbox from '../../../components/photo/PhotoLightbox.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const allPhotos = await getPhotosWithExif();
  
  // Collect all unique tags from all photos (use original casing for URL)
  const tagMap = new Map<string, string>(); // lowercase -> original
  allPhotos.forEach(photo => {
    photo.data.tags.forEach(tag => {
      if (tag) {
        const lowerTag = tag.toLowerCase();
        // Store original casing if not already stored
        if (!tagMap.has(lowerTag)) {
          tagMap.set(lowerTag, tag);
        }
      }
    });
  });
  
  // Return paths for each unique tag (Astro handles URL encoding automatically)
  return Array.from(tagMap.values()).map(tag => ({
    params: { tag },
  }));
}

const { tag } = Astro.params;
const decodedTag = decodeURIComponent(tag || '');

const allPhotos = await getPhotosWithExif();
const albums = await getCollection('albums');
const albumTitleMap = new Map(albums.map(a => [a.slug, a.data.title]));

// Get all unique tags for the filter pills
const allTagsSet = new Set<string>();
allPhotos.forEach(photo => {
  photo.data.tags.forEach(t => {
    allTagsSet.add(t.toLowerCase());
  });
});
const allTags = Array.from(allTagsSet).sort();

const filteredPhotos = allPhotos.filter(photo =>
  photo.data.tags.some(t => t.toLowerCase() === decodedTag.toLowerCase())
);
const sortedPhotos = filteredPhotos.sort((a, b) =>
  b.data.date.getTime() - a.data.date.getTime()
);
---

<PhotoLayout title={`${decodedTag} Photos`} description={`Photos tagged with ${decodedTag}`}>
  <div class="tag-page">
    <div class="tag-header">
      <h1 class="tag-title">#{decodedTag.toLowerCase()}</h1>
      <p class="tag-count" id="photo-count">{sortedPhotos.length} {sortedPhotos.length === 1 ? 'photo' : 'photos'}</p>
    </div>

    <!-- Tag Filter Pills -->
    <div class="tag-filter-bar">
      <button class="filter-toggle" id="filter-toggle" type="button">
        <span class="filter-toggle-text">Refine by tags</span>
        <svg class="filter-toggle-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <div class="tag-pills-container" id="tag-pills-container">
        <div class="tag-pills" id="tag-pills">
          {allTags.map((t) => (
            <button
              class={`tag-pill ${t === decodedTag.toLowerCase() ? 'active' : ''}`}
              data-tag={t}
              type="button"
            >
              #{t}
            </button>
          ))}
        </div>
        <button class="clear-filters" id="clear-filters" style="display: none;">
          Clear filters
        </button>
      </div>
    </div>

    {sortedPhotos.length === 0 ? (
      <p class="no-photos">No photos found with this tag.</p>
    ) : (
      <>
        <div class="photos-grid" id="photos-grid">
          {allPhotos.sort((a, b) => b.data.date.getTime() - a.data.date.getTime()).map((photo) => (
            <div
              class="photo-card"
              data-photo-id={photo.id}
              data-tags={photo.data.tags.map(t => t.toLowerCase()).join(',')}
              style={photo.data.tags.some(t => t.toLowerCase() === decodedTag.toLowerCase()) ? '' : 'display: none;'}
            >
              <div class="photo-image">
                <img 
                  src={getPhotoUrl(photo.data.filename)} 
                  alt={photo.data.title}
                  loading="lazy"
                />
                <div class="viewfinder-overlay">
                  <svg class="viewfinder-corners" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <!-- Minimal corner brackets -->
                    <path d="M15 15 L15 25 L25 25" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M85 15 L85 25 L75 25" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M15 85 L15 75 L25 75" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M85 85 L85 75 L75 75" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
              </div>
            </div>
          ))}
        </div>
        <PhotoLightbox photos={sortedPhotos.map(p => ({
          ...p,
          data: {
            ...p.data,
            albumTitle: p.data.album ? albumTitleMap.get(p.data.album) : undefined
          }
        }))} />
      </>
    )}
  </div>

  <script define:vars={{
    allPhotosData: allPhotos.map(p => ({
      id: p.id,
      url: getPhotoUrl(p.data.filename),
      data: {
        title: p.data.title,
        filename: p.data.filename,
        album: p.data.album,
        albumTitle: p.data.album ? albumTitleMap.get(p.data.album) : undefined,
        tags: (p.data.tags || []).map(t => (t || '').trim()).filter(t => t),
        camera: p.data.camera,
        settings: p.data.settings,
        focalLength: p.data.focalLength,
        location: p.data.location
      }
    }))
  }}></script>

  <style>
    .tag-page {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem 1.5rem;
    }

    .tag-header {
      text-align: center;
      margin-bottom: 2rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid rgba(28, 25, 23, 0.1);
    }

    .tag-filter-bar {
      margin-bottom: 3rem;
      background: var(--cream-dark);
      border-radius: 8px;
      overflow: hidden;
    }

    .filter-toggle {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 1rem 1.25rem;
      background: transparent;
      border: none;
      color: var(--charcoal);
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s ease;
      font-family: inherit;
    }

    .filter-toggle:hover {
      color: var(--amber);
    }

    .filter-toggle-icon {
      transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .filter-toggle.expanded .filter-toggle-icon {
      transform: rotate(180deg);
    }

    .tag-pills-container {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .tag-pills-container.expanded {
      max-height: 800px;
    }

    .tag-pills-container-inner {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1.5rem;
      padding: 0 1.25rem 1.25rem;
      flex-wrap: wrap;
    }

    .tag-pills {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
      padding: 0 1.25rem 1.25rem;
    }

    .tag-pill {
      padding: 0.5rem 1rem;
      border: 1.5px solid rgba(28, 25, 23, 0.2);
      border-radius: 20px;
      background: transparent;
      color: var(--charcoal);
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
      font-family: inherit;
    }

    .tag-pill:hover {
      border-color: var(--amber);
      transform: translateY(-2px);
      box-shadow: 0 2px 8px rgba(245, 158, 11, 0.15);
    }

    .tag-pill.active {
      background: var(--amber);
      border-color: var(--amber);
      color: white;
    }

    .clear-filters {
      padding: 0.5rem 1.25rem 1.25rem;
      border: none;
      background: transparent;
      color: var(--gray);
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      transition: color 0.2s ease;
      font-family: inherit;
      text-decoration: underline;
      white-space: nowrap;
      text-align: left;
      width: 100%;
    }

    .clear-filters:hover {
      color: var(--amber);
    }

    .tag-title {
      font-family: 'Crimson Text', serif;
      font-size: 3.5rem;
      font-weight: 700;
      color: var(--charcoal);
      margin: 0 0 0.5rem;
      letter-spacing: -0.02em;
    }

    .tag-count {
      color: var(--gray);
      font-size: 1rem;
      font-weight: 400;
    }

    .no-photos {
      text-align: center;
      color: var(--gray);
      font-size: 1.125rem;
      padding: 4rem 2rem;
    }

    .photos-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 2rem;
      margin-top: 2rem;
    }

    .photo-card {
      display: flex;
      flex-direction: column;
      text-decoration: none;
      color: inherit;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      border-radius: 4px;
      overflow: hidden;
      background: var(--cream-dark);
      cursor: pointer;
    }

    .photo-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .photo-image {
      width: 100%;
      aspect-ratio: 3 / 2;
      overflow: hidden;
      background: var(--cream);
    }

    .photo-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .photo-card:hover .photo-image img {
      transform: scale(1.05);
    }

    .viewfinder-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      pointer-events: none;
      opacity: 0;
      transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .photo-card:hover .viewfinder-overlay {
      opacity: 1;
    }

    .viewfinder-corners {
      width: 85%;
      height: 85%;
      color: rgba(255, 255, 255, 0.85);
      animation: viewfinderFocus 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      transition: color 0.2s ease, transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Focus lock animation state */
    :global(.viewfinder-corners.focus-locked) {
      color: #22c55e !important;
      transform: scale(0.95);
      opacity: 1 !important;
    }

    /* Ensure overlay is visible during focus lock */
    :global(.photo-card .viewfinder-overlay:has(.focus-locked)) {
      opacity: 1 !important;
    }

    @keyframes viewfinderFocus {
      from {
        opacity: 0;
        transform: scale(1.1);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    @media (max-width: 768px) {
      .tag-title {
        font-size: 2.5rem;
      }

      .tag-filter-bar {
        padding: 1rem;
      }

      .tag-pills {
        gap: 0.5rem;
      }

      .tag-pill {
        font-size: 0.8rem;
        padding: 0.4rem 0.8rem;
      }

      .photos-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const tagPills = document.querySelectorAll('.tag-pill');
      const photosGrid = document.getElementById('photos-grid');
      const photoCards = document.querySelectorAll('.photo-card');
      const photoCount = document.getElementById('photo-count');
      const clearFiltersBtn = document.getElementById('clear-filters');
      const filterToggle = document.getElementById('filter-toggle');
      const tagPillsContainer = document.getElementById('tag-pills-container');
      const tagTitle = document.querySelector('.tag-title');
      const initialTag = document.querySelector('.tag-pill.active')?.getAttribute('data-tag');
      const initialTitle = tagTitle?.textContent || '';

      // Track active tags
      let activeTags = new Set(initialTag ? [initialTag] : []);

      // Update lightbox when filters change
      function updateLightboxPhotos() {
        if (!window.photoLightbox) return;
        
        // Get all visible photo cards
        const visibleCards = Array.from(document.querySelectorAll('.photo-card'))
          .filter(card => card.style.display !== 'none');
        
        // Get photo IDs from visible cards
        const visiblePhotoIds = visibleCards.map(card => card.getAttribute('data-photo-id'));
        
        // Filter photos data to only include visible photos
        const visiblePhotos = allPhotosData.filter(photo => 
          visiblePhotoIds.includes(photo.id)
        );
        
        // Update lightbox with visible photos
        window.photoLightbox.updatePhotos(visiblePhotos);
      }

      // Toggle filter bar
      filterToggle?.addEventListener('click', () => {
        filterToggle.classList.toggle('expanded');
        tagPillsContainer?.classList.toggle('expanded');
      });

      function updatePhotos() {
        let visibleCount = 0;

        photoCards.forEach(card => {
          const cardTags = (card.getAttribute('data-tags') || '').split(',');
          // Show photo if it has ALL active tags (AND logic)
          const hasAllTags = Array.from(activeTags).every(tag => cardTags.includes(tag));

          if (hasAllTags && activeTags.size > 0) {
            card.style.display = '';
            visibleCount++;
          } else {
            card.style.display = 'none';
          }
        });

        // Update count
        if (photoCount) {
          photoCount.textContent = `${visibleCount} ${visibleCount === 1 ? 'photo' : 'photos'}`;
        }

        // Update title based on selected tags
        if (tagTitle) {
          if (activeTags.size > 1) {
            const sortedTags = Array.from(activeTags).sort();
            tagTitle.textContent = sortedTags.map(t => `#${t}`).join(' + ');
          } else if (activeTags.size === 1) {
            tagTitle.textContent = `#${Array.from(activeTags)[0]}`;
          } else {
            tagTitle.textContent = initialTitle;
          }
        }

        // Show/hide clear filters button
        if (clearFiltersBtn) {
          clearFiltersBtn.style.display = activeTags.size > 1 ? 'block' : 'none';
        }

        // Update lightbox with visible photos
        updateLightboxPhotos();
      }

      // Tag pill click handler
      tagPills.forEach(pill => {
        pill.addEventListener('click', () => {
          const tag = pill.getAttribute('data-tag');

          if (activeTags.has(tag)) {
            // Prevent removing the last tag
            if (activeTags.size > 1) {
              activeTags.delete(tag);
              pill.classList.remove('active');
            }
          } else {
            activeTags.add(tag);
            pill.classList.add('active');
          }

          updatePhotos();
        });
      });

      // Clear filters handler
      if (clearFiltersBtn) {
        clearFiltersBtn.addEventListener('click', () => {
          // Reset to initial tag only
          activeTags = new Set(initialTag ? [initialTag] : []);

          tagPills.forEach(pill => {
            const tag = pill.getAttribute('data-tag');
            if (tag === initialTag) {
              pill.classList.add('active');
            } else {
              pill.classList.remove('active');
            }
          });

          updatePhotos();
        });
      }

      // Initial update
      updatePhotos();
    });
  </script>
</PhotoLayout>

