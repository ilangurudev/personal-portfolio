---
import PhotoLayout from '../../layouts/PhotoLayout.astro';
import { getPhotosWithExif } from '../../utils/photo-helpers';

const allPhotos = await getPhotosWithExif();

// Aggregate tags with photo counts
const tagCounts = new Map<string, number>();

allPhotos.forEach(photo => {
  photo.data.tags.forEach(tag => {
    const normalizedTag = tag.toLowerCase();
    tagCounts.set(normalizedTag, (tagCounts.get(normalizedTag) || 0) + 1);
  });
});

// Convert to array and sort by count (descending), then alphabetically
const tagsArray = Array.from(tagCounts.entries())
  .map(([tag, count]) => ({ tag, count, displayTag: tag }))
  .sort((a, b) => {
    // First sort by count (descending)
    if (b.count !== a.count) {
      return b.count - a.count;
    }
    // Then alphabetically
    return a.tag.localeCompare(b.tag);
  });

// Get original tag casing for display (use first occurrence)
const tagDisplayMap = new Map<string, string>();
allPhotos.forEach(photo => {
  photo.data.tags.forEach(tag => {
    const normalizedTag = tag.toLowerCase();
    if (!tagDisplayMap.has(normalizedTag)) {
      tagDisplayMap.set(normalizedTag, tag);
    }
  });
});

// Update display tags with original casing
tagsArray.forEach(item => {
  item.displayTag = tagDisplayMap.get(item.tag) || item.tag;
});
---

<PhotoLayout title="Tags" description="Browse photos by tag">
  <div class="tags-page">
    <div class="tags-header">
      <h1 class="tags-title">Tags</h1>
      <p class="tags-subtitle">Browse photos by category</p>
    </div>

    {tagsArray.length === 0 ? (
      <p class="no-tags">No tags found.</p>
    ) : (
      <div class="tag-cloud">
        {tagsArray.map(({ tag, count, displayTag }) => {
          // Calculate size based on count (min: 0.875rem, max: 2.5rem)
          const maxCount = Math.max(...tagsArray.map(t => t.count));
          const minCount = Math.min(...tagsArray.map(t => t.count));
          const sizeRange = 1.625; // 2.5 - 0.875
          const normalizedSize = minCount === maxCount
            ? 1.5
            : 0.875 + (sizeRange * (count - minCount) / (maxCount - minCount));

          return (
            <a
              href={`/photography/tag/${encodeURIComponent(displayTag)}`}
              class="tag-cloud-item"
              style={`font-size: ${normalizedSize}rem;`}
              data-count={count}
              data-tag-link
              data-tag={displayTag.toLowerCase()}
            >
              #{displayTag.toLowerCase()}
            </a>
          );
        })}
      </div>
    )}
  </div>

  <style>
    .tags-page {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem 1.5rem;
    }

    .tags-header {
      text-align: center;
      margin-bottom: 4rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid rgba(28, 25, 23, 0.1);
    }

    .tags-title {
      font-family: 'Crimson Text', serif;
      font-size: 3.5rem;
      font-weight: 700;
      color: var(--charcoal);
      margin: 0 0 0.5rem;
      letter-spacing: -0.02em;
    }

    .tags-subtitle {
      color: var(--gray);
      font-size: 1.125rem;
      font-weight: 400;
      margin: 0;
    }

    .no-tags {
      text-align: center;
      color: var(--gray);
      font-size: 1.125rem;
      padding: 4rem 2rem;
    }

    .tag-cloud {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      gap: 1.5rem 2rem;
      padding: 2rem;
      line-height: 1.8;
    }

    .tag-cloud-item {
      text-decoration: none;
      color: var(--charcoal);
      font-weight: 500;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      display: inline-block;
      opacity: 0.75;
    }

    .tag-cloud-item:hover {
      color: var(--amber);
      opacity: 1;
      transform: scale(1.1);
    }

    .tag-cloud-item::after {
      content: attr(data-count);
      position: absolute;
      top: -0.5rem;
      right: -0.75rem;
      font-size: 0.625rem;
      color: var(--amber);
      font-weight: 600;
      opacity: 0;
      transition: opacity 0.2s ease;
    }

    .tag-cloud-item:hover::after {
      opacity: 1;
    }

    @media (max-width: 768px) {
      .tags-title {
        font-size: 2.5rem;
      }

      .tags-subtitle {
        font-size: 1rem;
      }

      .tag-cloud {
        gap: 1rem 1.5rem;
        padding: 1.5rem;
      }
    }
  </style>
</PhotoLayout>

