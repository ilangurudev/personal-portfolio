---
import { getCollection } from 'astro:content';
import BlogLayout from '../../layouts/BlogLayout.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<BlogLayout title={project.data.title} description={project.data.description}>
  <article class="project-post">
    <div class="terminal-header">
      <span class="command-prompt">$ cat projects/{project.slug}/README.md</span>
    </div>
    
    <header class="project-header">
      {project.data.image && (
        <div class="header-image">
          <img src={project.data.image} alt={project.data.title} />
        </div>
      )}
      
      <h1>{project.data.title}</h1>
      
      <div class="meta">
        <time datetime={project.data.date.toISOString()}>
          {project.data.date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
          })}
        </time>
        <div class="tags">
          {project.data.tags.map(tag => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      </div>

      <div class="links">
        {project.data.repo && (
          <a href={project.data.repo} target="_blank" rel="noopener noreferrer" class="project-link">
            <span class="icon">git</span>
            Repository
          </a>
        )}
        {project.data.link && (
          <a href={project.data.link} target="_blank" rel="noopener noreferrer" class="project-link">
            <span class="icon">web</span>
            Live Demo
          </a>
        )}
      </div>
    </header>

    <div class="prose">
      <Content />
    </div>
  </article>
</BlogLayout>

<style>
  .project-post {
    max-width: 900px;
    margin: 0 auto;
  }

  .terminal-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--slate-800);
  }

  .command-prompt {
    color: var(--terminal-cyan);
    font-size: 0.9rem;
    font-weight: 500;
  }

  .command-prompt::after {
    content: '';
    display: inline-block;
    width: 8px;
    height: 14px;
    background: var(--terminal-green);
    margin-left: 4px;
    animation: blink 1s step-end infinite;
  }

  .project-header {
    margin-bottom: 3rem;
  }

  .header-image {
    width: 100%;
    height: 300px;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 2rem;
    border: 1px solid var(--slate-800);
  }

  .header-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-header h1 {
    color: var(--terminal-green);
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-shadow: 0 0 10px rgba(34, 197, 94, 0.3);
  }

  .meta {
    display: flex;
    gap: 1.5rem;
    color: var(--terminal-gray);
    font-family: 'Fira Code', monospace;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    color: var(--terminal-cyan);
  }

  .links {
    display: flex;
    gap: 1rem;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(6, 182, 212, 0.1);
    border: 1px solid var(--terminal-cyan);
    color: var(--terminal-cyan);
    text-decoration: none;
    border-radius: 4px;
    font-family: 'Fira Code', monospace;
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }

  .project-link:hover {
    background: var(--terminal-cyan);
    color: var(--slate-950);
    box-shadow: 0 0 15px rgba(6, 182, 212, 0.4);
  }

  .icon {
    font-weight: 700;
  }

  /* Markdown Prose Styling */
  .prose {
    color: var(--terminal-gray);
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .prose :global(h2) {
    color: var(--terminal-cyan);
    font-size: 1.8rem;
    margin: 2.5rem 0 1rem;
  }

  .prose :global(h3) {
    color: var(--terminal-yellow);
    font-size: 1.4rem;
    margin: 2rem 0 1rem;
  }

  .prose :global(pre) {
    background: var(--slate-900) !important;
    border: 1px solid var(--slate-800);
    border-radius: 8px;
    padding: 1.5rem;
    margin: 2rem 0;
    overflow-x: auto;
  }

  .prose :global(code) {
    font-family: 'JetBrains Mono', monospace;
  }

  .prose :global(p > code) {
    background: rgba(6, 182, 212, 0.1);
    color: var(--terminal-cyan);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .prose :global(ul) {
    list-style: none;
    padding-left: 1.5rem;
  }

  .prose :global(li) {
    position: relative;
    margin: 0.5rem 0;
  }

  .prose :global(li::before) {
    content: '>';
    position: absolute;
    left: -1.5rem;
    color: var(--terminal-cyan);
  }

  .prose :global(a) {
    color: var(--terminal-cyan);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all 0.3s ease;
  }

  .prose :global(a:hover) {
    color: var(--terminal-yellow);
    border-bottom-color: var(--terminal-yellow);
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }
</style>



