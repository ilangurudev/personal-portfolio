---
import BlogLayout from '../layouts/BlogLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter(post => post.slug !== 'about')
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5); // Show only last 5 posts

const projects = (await getCollection('projects'))
  .sort((a, b) => {
    // Featured projects first, then by date
    if (a.data.featured && !b.data.featured) return -1;
    if (!a.data.featured && b.data.featured) return 1;
    return b.data.date.valueOf() - a.data.date.valueOf();
  })
  .slice(0, 5); // Show only last 5 projects
---

<BlogLayout title="Guru Ilangovan" description="AI researcher and photographer">
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="terminal-header">
      <span class="command-prompt">$ whoami</span>
    </div>
    <div class="hero-content">
      <div class="profile-image-wrapper">
        <img src="/guru.png" alt="Gurudev Ilangovan" class="profile-image" />
      </div>
      <div class="hero-text">
        <h1 class="hero-title">Gurudev "Guru" Ilangovan</h1>
        <p class="hero-subtitle">AI/LLM Engineer @ Capital One</p>
        <p class="hero-description">Building intelligent systems with LLMs and Generative AI</p>
        <div class="hero-links">
          <a href="/blog/about" class="hero-link">â†’ Read more about me</a>
          <span class="separator">|</span>
          <a href="/photography" class="hero-link">ðŸ“¸ Photography</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Two Column Layout -->
  <div class="dashboard-grid">
    <!-- Recent Blog Posts -->
    <section class="dashboard-section">
      <div class="terminal-header">
        <span class="command-prompt">$ ls -la blog/ | tail -n 5</span>
      </div>
      <div class="content-list">
        {posts.map(post => (
          <article class="content-item">
            <div class="item-meta">
              <time datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
              </time>
            </div>
            <a href={`/blog/${post.slug}`} class="item-title">
              {post.data.title}
            </a>
            <p class="item-description">// {post.data.description}</p>
          </article>
        ))}
      </div>
      <a href="/blog" class="view-all">â†’ View all posts</a>
    </section>

    <!-- Featured Projects -->
    <section class="dashboard-section">
      <div class="terminal-header">
        <span class="command-prompt">$ ls -la projects/ | tail -n 5</span>
      </div>
      <div class="content-list">
        {projects.map(project => (
          <article class="content-item">
            <div class="item-meta">
              {project.data.featured && <span class="featured-star">â˜…</span>}
              <time datetime={project.data.date.toISOString()}>
                {project.data.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
              </time>
            </div>
            <a href={`/projects/${project.slug}`} class="item-title">
              {project.data.title}
            </a>
            <p class="item-description">// {project.data.description}</p>
          </article>
        ))}
      </div>
      <a href="/projects" class="view-all">â†’ View all projects</a>
    </section>
  </div>

  <style>
    /* Hero Section */
    .hero-section {
      margin-bottom: 3rem;
    }

    .hero-content {
      display: flex;
      align-items: center;
      gap: 2rem;
      margin-top: 1.5rem;
    }

    .profile-image-wrapper {
      flex-shrink: 0;
      width: 120px;
      height: 120px;
      border: 2px solid var(--terminal-cyan);
      border-radius: 50%;
      padding: 3px;
      background: var(--slate-900);
      box-shadow:
        0 0 20px rgba(6, 182, 212, 0.3),
        inset 0 0 20px rgba(6, 182, 212, 0.1);
      transition: all 0.3s ease;
    }

    .profile-image-wrapper:hover {
      box-shadow:
        0 0 30px rgba(6, 182, 212, 0.5),
        inset 0 0 20px rgba(6, 182, 212, 0.2);
      transform: scale(1.05);
    }

    .profile-image {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      object-fit: cover;
      display: block;
    }

    .hero-text {
      flex: 1;
    }

    .hero-title {
      color: var(--terminal-green);
      font-size: 1.75rem;
      font-weight: 700;
      margin: 0 0 0.5rem 0;
      text-shadow: 0 0 10px rgba(34, 197, 94, 0.3);
      font-family: 'Fira Code', monospace;
    }

    .hero-subtitle {
      color: var(--terminal-cyan);
      font-size: 1.1rem;
      margin: 0 0 0.5rem 0;
      font-family: 'Fira Code', monospace;
    }

    .hero-description {
      color: var(--terminal-gray);
      font-size: 1rem;
      margin: 0 0 1rem 0;
      opacity: 0.9;
    }

    .hero-links {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-size: 0.95rem;
    }

    .hero-link {
      color: var(--terminal-cyan);
      text-decoration: none;
      transition: color 0.2s ease;
    }

    .hero-link:hover {
      color: var(--terminal-yellow);
    }

    .separator {
      color: var(--terminal-gray);
      opacity: 0.5;
    }

    /* Dashboard Grid */
    .dashboard-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .dashboard-section {
      min-width: 0; /* Prevent grid overflow */
    }

    /* Terminal Header */
    .terminal-header {
      margin-bottom: 1.5rem;
      padding-bottom: 0.75rem;
      border-bottom: 1px solid var(--slate-800);
    }

    .command-prompt {
      color: var(--terminal-cyan);
      font-size: 0.9rem;
      font-weight: 500;
      font-family: 'Fira Code', monospace;
    }

    .command-prompt::after {
      content: '';
      display: inline-block;
      width: 8px;
      height: 14px;
      background: var(--terminal-green);
      margin-left: 4px;
      animation: blink 1s step-end infinite;
    }

    /* Content List */
    .content-list {
      display: flex;
      flex-direction: column;
      gap: 1.25rem;
      margin-bottom: 1.5rem;
    }

    .content-item {
      padding: 0.75rem;
      border: 1px solid transparent;
      border-radius: 6px;
      transition: all 0.2s ease;
    }

    .content-item:hover {
      background: rgba(255, 255, 255, 0.03);
      border-color: rgba(255, 255, 255, 0.1);
    }

    .item-meta {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--terminal-gray);
      font-size: 0.8rem;
      margin-bottom: 0.4rem;
      opacity: 0.7;
      font-family: 'Fira Code', monospace;
    }

    .featured-star {
      color: var(--terminal-yellow);
      font-size: 0.9rem;
    }

    .item-title {
      display: block;
      font-size: 1.1rem;
      color: var(--terminal-green);
      text-decoration: none;
      font-weight: 600;
      margin-bottom: 0.4rem;
      transition: color 0.2s ease;
      font-family: 'Fira Code', monospace;
      line-height: 1.4;
    }

    .content-item:hover .item-title {
      color: var(--terminal-cyan);
    }

    .item-description {
      color: var(--terminal-gray);
      font-size: 0.9rem;
      margin: 0;
      opacity: 0.8;
      line-height: 1.5;
    }

    .view-all {
      display: inline-block;
      color: var(--terminal-cyan);
      text-decoration: none;
      font-size: 0.95rem;
      font-family: 'Fira Code', monospace;
      transition: color 0.2s ease;
      padding: 0.5rem 0;
    }

    .view-all:hover {
      color: var(--terminal-yellow);
    }

    /* Animations */
    @keyframes blink {
      0%, 50% { opacity: 1; }
      51%, 100% { opacity: 0; }
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .dashboard-grid {
        grid-template-columns: 1fr;
        gap: 2.5rem;
      }

      .hero-content {
        flex-direction: column;
        align-items: flex-start;
        gap: 1.5rem;
      }

      .profile-image-wrapper {
        width: 100px;
        height: 100px;
      }

      .hero-title {
        font-size: 1.5rem;
      }

      .hero-subtitle {
        font-size: 1rem;
      }

      .hero-links {
        flex-wrap: wrap;
      }
    }

    @media (max-width: 640px) {
      .hero-title {
        font-size: 1.25rem;
      }

      .hero-subtitle {
        font-size: 0.95rem;
      }

      .item-title {
        font-size: 1rem;
      }

      .item-description {
        font-size: 0.85rem;
      }
    }
  </style>
</BlogLayout>
