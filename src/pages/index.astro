---
import BlogLayout from '../layouts/BlogLayout.astro';
import { getEntry, getCollection } from 'astro:content';

const aboutEntry = await getEntry('blog', 'about');
const { Content } = await aboutEntry.render();

const posts = (await getCollection('blog'))
  .filter(post => post.slug !== 'about')
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BlogLayout title="About" description="AI researcher and photographer">
  <article class="about-content">
    <div class="terminal-header">
      <span class="command-prompt">$ cat about.md</span>
    </div>
    <div class="profile-section">
      <div class="profile-image-wrapper">
        <img src="/guru.png" alt="Gurudev Ilangovan" class="profile-image" />
      </div>
      <div class="profile-details">
        <div class="location-badge">
          <svg class="terminal-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2C8.13 2 5 5.13 5 9C5 14.25 12 22 12 22C12 22 19 14.25 19 9C19 5.13 15.87 2 12 2Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            <circle cx="12" cy="9" r="2.5" stroke="currentColor" stroke-width="1.5"/>
          </svg>
          <span>Washington D.C</span>
        </div>
      </div>
    </div>
    <div class="prose">
      <Content />
    </div>
  </article>

  <section class="recent-posts">
    <div class="terminal-header">
      <span class="command-prompt">$ ls -la blog/</span>
    </div>
    
    <div class="posts-list">
      {posts.map(post => (
        <article class="post-preview">
          <div class="post-meta">
            <span class="permissions">-rw-r--r--</span>
            <span class="user">guru</span>
            <span class="size">{Math.floor(post.body.length / 100)}k</span>
            <time datetime={post.data.date.toISOString()}>
              {post.data.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
            </time>
          </div>
          <a href={`/blog/${post.slug}`} class="post-title">
            {post.data.title}
          </a>
          <p class="post-description">// {post.data.description}</p>
        </article>
      ))}
    </div>
  </section>

  <style>
    .about-content {
      max-width: 800px;
    }

    /* Recent Posts Section */
    .recent-posts {
      margin-top: 4rem;
      max-width: 800px;
    }

    .posts-list {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .post-preview {
      font-family: 'Fira Code', monospace;
      padding: 1rem;
      border: 1px solid transparent;
      border-radius: 8px;
      transition: all 0.2s ease;
    }

    .post-preview:hover {
      background: rgba(255, 255, 255, 0.03);
      border-color: rgba(255, 255, 255, 0.1);
    }

    .post-meta {
      display: flex;
      gap: 1rem;
      color: var(--terminal-gray);
      font-size: 0.85rem;
      margin-bottom: 0.5rem;
      opacity: 0.7;
    }

    .post-title {
      display: block;
      font-size: 1.25rem;
      color: var(--terminal-green);
      text-decoration: none;
      font-weight: 600;
      margin-bottom: 0.5rem;
      transition: color 0.2s ease;
    }

    .post-preview:hover .post-title {
      color: var(--terminal-cyan);
    }

    .post-description {
      color: var(--terminal-gray);
      font-size: 0.95rem;
      margin: 0;
      opacity: 0.8;
    }

    @media (max-width: 640px) {
      .post-meta {
        flex-wrap: wrap;
        gap: 0.5rem;
      }
      
      .permissions, .user, .size {
        display: none;
      }
    }

    .terminal-header {
      margin-bottom: 2rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid var(--slate-800);
    }

    .command-prompt {
      color: var(--terminal-cyan);
      font-size: 0.9rem;
      font-weight: 500;
    }

    .command-prompt::after {
      content: '';
      display: inline-block;
      width: 8px;
      height: 14px;
      background: var(--terminal-green);
      margin-left: 4px;
      animation: blink 1s step-end infinite;
    }

    /* Profile Image Section */
    .profile-section {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: 1.5rem;
      margin: 2rem 0 3rem;
    }

    .profile-details {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      align-items: flex-start;
    }

    .location-badge {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--terminal-cyan);
      font-family: 'Fira Code', monospace;
      font-size: 0.9rem;
      padding: 0.25rem 0.75rem;
      background: rgba(6, 182, 212, 0.1);
      border-radius: 4px;
      border: 1px solid rgba(6, 182, 212, 0.2);
    }

    .terminal-icon {
      width: 16px;
      height: 16px;
      stroke: currentColor;
    }

    .profile-image-wrapper {
      position: relative;
      width: 200px;
      height: 200px;
      border: 2px solid var(--terminal-cyan);
      border-radius: 50%;
      padding: 4px;
      background: var(--slate-900);
      box-shadow: 
        0 0 20px rgba(6, 182, 212, 0.3),
        inset 0 0 20px rgba(6, 182, 212, 0.1);
      transition: all 0.3s ease;
    }

    .profile-image-wrapper:hover {
      box-shadow: 
        0 0 30px rgba(6, 182, 212, 0.5),
        inset 0 0 20px rgba(6, 182, 212, 0.2);
      transform: scale(1.02);
    }

    .profile-image {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      object-fit: cover;
      display: block;
    }

    /* Markdown Prose Styling */
    .prose {
      color: var(--terminal-gray);
      font-size: 1rem;
      line-height: 1.8;
    }

    .prose :global(h1) {
      color: var(--terminal-green);
      font-size: 2rem;
      font-weight: 700;
      margin: 2rem 0 1rem;
      text-shadow: 0 0 10px rgba(34, 197, 94, 0.3);
    }

    .prose :global(h2) {
      color: var(--terminal-cyan);
      font-size: 1.5rem;
      font-weight: 600;
      margin: 1.5rem 0 0.75rem;
    }

    .prose :global(p) {
      margin: 1rem 0;
    }

    .prose :global(strong) {
      color: var(--terminal-yellow);
      font-weight: 700;
    }

    .prose :global(ul) {
      list-style: none;
      padding-left: 1.5rem;
    }

    .prose :global(li) {
      position: relative;
      margin: 0.5rem 0;
    }

    .prose :global(li::before) {
      content: '>';
      position: absolute;
      left: -1.5rem;
      color: var(--terminal-cyan);
    }

    .prose :global(a) {
      color: var(--terminal-cyan);
      text-decoration: none;
      border-bottom: 1px solid transparent;
      transition: all 0.3s ease;
    }

    .prose :global(a:hover) {
      color: var(--terminal-yellow);
      border-bottom-color: var(--terminal-yellow);
    }

    @keyframes blink {
      0%, 50% { opacity: 1; }
      51%, 100% { opacity: 0; }
    }

    /* Responsive Profile Image */
    @media (max-width: 768px) {
      .profile-image-wrapper {
        width: 150px;
        height: 150px;
      }

      .profile-section {
        margin: 1.5rem 0 2rem;
      }
    }
  </style>
</BlogLayout>
