---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | Guru's Photography</title>
  {description && <meta name="description" content={description} />}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400&family=Work+Sans:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>
<body class="photo-space">
  <header class="photo-header">
    <div class="header-content">
      <div class="header-title-section">
        <h1 class="site-title">
          <a href="/photography">Guru's Photography</a>
        </h1>
        <p class="theme-line">how i see the world...</p>
      </div>
      <nav class="photo-nav">
        <a href="/photography/tags">Tags</a>
        <a href="/photography/albums">Albums</a>
        <div class="space-toggle">
          <a href="/" class="toggle-link toggle-inactive">Professional</a>
          <span class="toggle-link toggle-active">Personal</span>
        </div>
      </nav>
    </div>
  </header>

  <main class="photo-main">
    <slot />
  </main>

  <footer class="photo-footer">
    <p>&copy; 2024 Guru. All photographs rights reserved.</p>
  </footer>

  <style>
    :root {
      --cream: #FFFBF5;
      --cream-dark: #F5F1E8;
      --amber: #D97706;
      --terracotta: #C2410C;
      --charcoal: #1C1917;
      --gray: #78716C;
    }

    body.photo-space {
      background: var(--cream);
      color: var(--charcoal);
      font-family: 'Work Sans', sans-serif;
      font-weight: 300;
      line-height: 1.6;
      margin: 0;
      padding: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    /* Space Toggle - Pill Style in Navigation */
    .space-toggle {
      display: flex;
      align-items: center;
      background: var(--cream-dark);
      border-radius: 2rem;
      padding: 0.25rem;
      gap: 0;
      height: fit-content;
      line-height: 1;
    }

    .toggle-link {
      padding: 0.5rem 1rem;
      text-decoration: none;
      font-size: 0.875rem;
      font-weight: 500;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      border-radius: 2rem;
      color: var(--gray);
      display: inline-block;
      line-height: 1.5;
    }

    .toggle-link.toggle-inactive {
      color: var(--gray);
    }

    .toggle-link.toggle-inactive:hover {
      color: var(--charcoal);
    }

    .toggle-link.toggle-active {
      background: var(--charcoal);
      color: var(--cream);
      cursor: default;
    }

    /* Header - Editorial Style */
    .photo-header {
      padding: 3rem 2rem 2rem;
      border-bottom: 1px solid rgba(28, 25, 23, 0.1);
      background: var(--cream);
      position: sticky;
      top: 0;
      z-index: 100;
      backdrop-filter: blur(10px);
      background: rgba(255, 251, 245, 0.9);
    }

    .header-content {
      max-width: 1400px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: baseline;
    }

    .header-title-section {
      display: flex;
      flex-direction: column;
      gap: 0.125rem;
    }

    .site-title {
      margin: 0;
      font-family: 'Crimson Text', serif;
      font-size: 3rem;
      font-weight: 700;
      letter-spacing: -0.02em;
    }

    .theme-line {
      margin: 0;
      font-size: 1rem;
      font-weight: 300;
      font-style: italic;
      color: var(--gray);
      font-family: 'Work Sans', sans-serif;
    }

    .site-title a {
      color: var(--charcoal);
      text-decoration: none;
      position: relative;
      transition: color 0.3s ease;
    }

    .site-title a::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: 3px;
      background: var(--amber);
      transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .site-title a:hover::after {
      width: 100%;
    }

    /* Navigation - Refined */
    .photo-nav {
      display: flex;
      gap: 2.5rem;
      align-items: center;
    }

    .photo-nav a {
      color: var(--gray);
      text-decoration: none;
      font-size: 1.125rem;
      font-weight: 400;
      position: relative;
      transition: color 0.3s ease;
    }

    .photo-nav a::before {
      content: '';
      position: absolute;
      bottom: -4px;
      left: 0;
      width: 0;
      height: 2px;
      background: var(--amber);
      transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .photo-nav a:hover {
      color: var(--charcoal);
    }

    .photo-nav a:hover::before {
      width: 100%;
    }

    /* Main Content */
    .photo-main {
      flex: 1;
      padding: 3rem 2rem;
      max-width: 1400px;
      margin: 0 auto;
      width: 100%;
    }

    /* Footer - Minimal */
    .photo-footer {
      padding: 2rem;
      text-align: center;
      border-top: 1px solid rgba(28, 25, 23, 0.1);
      color: var(--gray);
      font-size: 0.875rem;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .photo-header {
        padding: 2rem 1rem 1.5rem;
      }

      .header-content {
        flex-direction: column;
        gap: 1.5rem;
        align-items: flex-start;
      }

      .site-title {
        font-size: 2rem;
      }

      .theme-line {
        font-size: 0.875rem;
      }

      .photo-nav {
        gap: 1.5rem;
        flex-wrap: wrap;
      }

      .photo-nav a {
        font-size: 1rem;
      }

      .space-toggle {
        font-size: 0.75rem;
      }

      .toggle-link {
        padding: 0.4rem 0.75rem;
      }

      .photo-main {
        padding: 2rem 1rem;
      }
    }

    /* Animations */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .photo-header,
    .photo-main > * {
      animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) backwards;
    }

    .photo-header {
      animation-delay: 0.1s;
    }

    .photo-main > *:nth-child(1) { animation-delay: 0.2s; }
    .photo-main > *:nth-child(2) { animation-delay: 0.3s; }
    .photo-main > *:nth-child(3) { animation-delay: 0.4s; }
  </style>
</body>
</html>
