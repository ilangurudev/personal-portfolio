---
import '../styles/global.css';
import GoogleAnalytics from '../components/GoogleAnalytics.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | Guru's Photography</title>
  {description && <meta name="description" content={description} />}
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400&family=Work+Sans:wght@300;400;500;600&display=swap" rel="stylesheet">
  <GoogleAnalytics />
</head>
<body class="photo-space">
  <header class="photo-header">
    <div class="header-content">
      <div class="header-title-section">
        <div class="logo-title-wrapper">
          <img src="/logo.svg" alt="Logo" class="site-logo" />
          <h1 class="site-title">
            <a href="/photography">Guru's Photography</a>
          </h1>
        </div>
      </div>

      <!-- Desktop Navigation -->
      <nav class="photo-nav desktop-nav">
        <a href="/photography">Home</a>
        <a href="/photography/photos">All Photos</a>
        <a href="/photography/albums">Albums</a>
        <a href="/photography/tags">Tags</a>
        <div class="space-toggle">
          <a href="/" class="toggle-link toggle-inactive">Professional</a>
          <span class="toggle-link toggle-active">Personal</span>
        </div>
      </nav>

      <!-- Mobile Hamburger -->
      <button class="hamburger-btn" id="hamburger-btn" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </header>

  <!-- Mobile Menu Drawer -->
  <div class="mobile-menu" id="mobile-menu">
    <div class="mobile-menu-overlay" id="mobile-menu-overlay"></div>
    <nav class="mobile-menu-content">
      <div class="mobile-menu-header">
        <h2>Menu</h2>
        <button class="mobile-menu-close" id="mobile-menu-close" aria-label="Close menu">×</button>
      </div>
      <div class="mobile-menu-links">
        <a href="/photography" class="mobile-menu-link">Home</a>
        <a href="/photography/photos" class="mobile-menu-link">All Photos</a>
        <a href="/photography/albums" class="mobile-menu-link">Albums</a>
        <a href="/photography/tags" class="mobile-menu-link">Tags</a>
      </div>
      <div class="mobile-menu-divider"></div>
      <div class="mobile-space-toggle">
        <p class="mobile-space-label">Space</p>
        <div class="space-toggle">
          <a href="/" class="toggle-link toggle-inactive">Professional</a>
          <span class="toggle-link toggle-active">Personal</span>
        </div>
      </div>
    </nav>
  </div>

  <main class="photo-main">
    <slot />
  </main>

  <footer class="photo-footer">
    <p>All images © 2025 Gurudev Ilangovan. All rights reserved. Images may not be reproduced without permission.</p>
  </footer>

  <script is:inline>
    (() => {
      const isImageTarget = (target) => target instanceof Element && Boolean(target.closest('img'));

      const blockImageEvent = (event) => {
        if (isImageTarget(event.target)) {
          event.preventDefault();
        }
      };

      const markImagesUndraggable = () => {
        document.querySelectorAll('img').forEach((img) => {
          if (!img.hasAttribute('draggable')) {
            img.setAttribute('draggable', 'false');
          }
        });
      };

      document.addEventListener('contextmenu', blockImageEvent);
      document.addEventListener('dragstart', blockImageEvent);

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', markImagesUndraggable, { once: true });
      } else {
        markImagesUndraggable();
      }

      new MutationObserver((mutations) => {
        for (const mutation of mutations) {
          if (mutation.addedNodes.length > 0) {
            markImagesUndraggable();
            break;
          }
        }
      }).observe(document.documentElement, {
        childList: true,
        subtree: true,
      });

      // Mobile menu functionality
      const hamburgerBtn = document.getElementById('hamburger-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      const mobileMenuClose = document.getElementById('mobile-menu-close');
      const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');

      function openMobileMenu() {
        mobileMenu.classList.add('active');
        document.body.style.overflow = 'hidden';
      }

      function closeMobileMenu() {
        mobileMenu.classList.remove('active');
        document.body.style.overflow = '';
      }

      if (hamburgerBtn) {
        hamburgerBtn.addEventListener('click', openMobileMenu);
      }

      if (mobileMenuClose) {
        mobileMenuClose.addEventListener('click', closeMobileMenu);
      }

      if (mobileMenuOverlay) {
        mobileMenuOverlay.addEventListener('click', closeMobileMenu);
      }

      // Close menu on escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && mobileMenu.classList.contains('active')) {
          closeMobileMenu();
        }
      });
    })();
  </script>

  <style>
    :root {
      --cream: #FFFBF5;
      --cream-dark: #F5F1E8;
      --amber: #D97706;
      --terracotta: #C2410C;
      --charcoal: #1C1917;
      --gray: #78716C;
    }

    /* Disable long-press context menu on images (iOS) */
    :global(img) {
      -webkit-touch-callout: none;
      -webkit-user-select: none;
      user-select: none;
    }

    body.photo-space {
      background: var(--cream);
      color: var(--charcoal);
      font-family: 'Work Sans', sans-serif;
      font-weight: 300;
      line-height: 1.6;
      margin: 0;
      padding: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    /* Space Toggle - Pill Style in Navigation */
    .space-toggle {
      display: flex;
      align-items: center;
      background: var(--cream-dark);
      border-radius: 2rem;
      padding: 0.25rem;
      gap: 0;
      height: fit-content;
      line-height: 1;
    }

    .toggle-link {
      padding: 0.5rem 1rem;
      text-decoration: none;
      font-size: 0.875rem;
      font-weight: 500;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      border-radius: 2rem;
      color: var(--gray);
      display: inline-block;
      line-height: 1.5;
    }

    .toggle-link.toggle-inactive {
      color: var(--gray);
    }

    .toggle-link.toggle-inactive:hover {
      color: var(--charcoal);
    }

    .toggle-link.toggle-active {
      background: var(--charcoal);
      color: var(--cream);
      cursor: default;
    }

    /* Header - Editorial Style */
    .photo-header {
      padding: 3rem 2rem 2rem;
      border-bottom: 1px solid rgba(28, 25, 23, 0.1);
      background: var(--cream);
      position: sticky;
      top: 0;
      z-index: 100;
      backdrop-filter: blur(10px);
      background: rgba(255, 251, 245, 0.9);
    }

    .header-content {
      max-width: 1400px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .header-title-section {
      display: flex;
      flex-direction: column;
      gap: 0.125rem;
    }

    .logo-title-wrapper {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .site-logo {
      height: 3rem;
      width: auto;
      opacity: 0.9;
      transition: opacity 0.3s ease;
    }

    .site-logo:hover {
      opacity: 1;
    }

    .site-title {
      margin: 0;
      font-family: 'Crimson Text', serif;
      font-size: 3rem;
      font-weight: 700;
      letter-spacing: -0.02em;
    }

    .site-title a {
      color: var(--charcoal);
      text-decoration: none;
      position: relative;
      transition: color 0.3s ease;
    }

    .site-title a::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: 3px;
      background: var(--amber);
      transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .site-title a:hover::after {
      width: 100%;
    }

    /* Navigation - Refined */
    .photo-nav {
      display: flex;
      gap: 2.5rem;
      align-items: center;
    }

    .photo-nav a {
      color: var(--gray);
      text-decoration: none;
      font-size: 1.125rem;
      font-weight: 400;
      position: relative;
      transition: color 0.3s ease;
    }

    .photo-nav a::before {
      content: '';
      position: absolute;
      bottom: -4px;
      left: 0;
      width: 0;
      height: 2px;
      background: var(--amber);
      transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .photo-nav a:hover {
      color: var(--charcoal);
    }

    .photo-nav a:hover::before {
      width: 100%;
    }

    /* Main Content */
    .photo-main {
      flex: 1;
      padding: 3rem 2rem;
      max-width: 1400px;
      margin: 0 auto;
      width: 100%;
      display: flex;
      flex-direction: column;
      min-height: 0; /* Allow flex child to shrink */
    }

    /* Footer - Minimal */
    .photo-footer {
      padding: 2rem;
      text-align: center;
      border-top: 1px solid rgba(28, 25, 23, 0.1);
      color: var(--gray);
      font-size: 0.875rem;
    }

    /* Hamburger Button */
    .hamburger-btn {
      display: none;
      flex-direction: column;
      justify-content: space-between;
      width: 28px;
      height: 22px;
      background: transparent;
      border: none;
      cursor: pointer;
      padding: 0;
      z-index: 101;
    }

    .hamburger-btn span {
      display: block;
      width: 100%;
      height: 3px;
      background: var(--charcoal);
      border-radius: 2px;
      transition: all 0.3s ease;
    }

    .hamburger-btn:hover span {
      background: var(--amber);
    }

    /* Mobile Menu */
    .mobile-menu {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 999;
      visibility: hidden;
      opacity: 0;
      transition: visibility 0.3s, opacity 0.3s;
    }

    .mobile-menu.active {
      visibility: visible;
      opacity: 1;
    }

    .mobile-menu-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(28, 25, 23, 0.7);
      backdrop-filter: blur(4px);
    }

    .mobile-menu-content {
      position: absolute;
      top: 0;
      right: 0;
      width: 280px;
      height: 100%;
      background: var(--cream);
      box-shadow: -4px 0 24px rgba(0, 0, 0, 0.15);
      transform: translateX(100%);
      transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      overflow-y: auto;
      display: flex;
      flex-direction: column;
      padding: 2rem;
    }

    .mobile-menu.active .mobile-menu-content {
      transform: translateX(0);
    }

    .mobile-menu-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid var(--amber);
    }

    .mobile-menu-header h2 {
      font-family: 'Crimson Text', serif;
      font-size: 1.75rem;
      font-weight: 700;
      color: var(--charcoal);
      margin: 0;
    }

    .mobile-menu-close {
      width: 36px;
      height: 36px;
      border: none;
      background: var(--cream-dark);
      color: var(--charcoal);
      font-size: 1.75rem;
      font-weight: 300;
      cursor: pointer;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s ease;
      line-height: 1;
      padding: 0;
    }

    .mobile-menu-close:hover {
      background: var(--amber);
      color: white;
      transform: rotate(90deg);
    }

    .mobile-menu-links {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .mobile-menu-link {
      display: block;
      padding: 1rem;
      color: var(--charcoal);
      text-decoration: none;
      font-size: 1.125rem;
      font-weight: 400;
      border-radius: 4px;
      transition: all 0.2s ease;
    }

    .mobile-menu-link:hover {
      background: var(--cream-dark);
      color: var(--amber);
      transform: translateX(4px);
    }

    .mobile-menu-divider {
      height: 1px;
      background: rgba(28, 25, 23, 0.1);
      margin: 1.5rem 0;
    }

    .mobile-space-toggle {
      margin-top: auto;
      padding-top: 1.5rem;
    }

    .mobile-space-label {
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--gray);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin: 0 0 0.75rem;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .photo-header {
        padding: 1.5rem 1rem;
      }

      .header-content {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
      }

      .logo-title-wrapper {
        gap: 0.75rem;
      }

      .site-logo {
        height: 1.5rem;
      }

      .site-title {
        font-size: 1.5rem;
      }

      /* Hide desktop nav, show hamburger */
      .desktop-nav {
        display: none;
      }

      .hamburger-btn {
        display: flex;
      }

      .photo-main {
        padding: 2rem 1rem;
        min-height: 0; /* Ensure proper flex behavior on mobile */
      }
    }

    /* Animations */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .photo-header,
    .photo-main > * {
      animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) backwards;
    }

    .photo-header {
      animation-delay: 0.1s;
    }

    .photo-main > *:nth-child(1) { animation-delay: 0.2s; }
    .photo-main > *:nth-child(2) { animation-delay: 0.3s; }
    .photo-main > *:nth-child(3) { animation-delay: 0.4s; }
  </style>
</body>
</html>
