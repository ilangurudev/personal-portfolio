---
import '../styles/global.css';
import GoogleAnalytics from '../components/GoogleAnalytics.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | guru.dev</title>
  {description && <meta name="description" content={description} />}
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;700&display=swap" rel="stylesheet">
  <GoogleAnalytics />
</head>
<body class="blog-space">
  <div class="scanlines"></div>

  <header class="blog-header">
    <div class="header-content">
      <div class="terminal-prompt">
        <span class="prompt-symbol">$</span>
        <h1 class="site-title">
          <a href="/">guru.dev<span class="cursor">_</span></a>
        </h1>
      </div>

      <!-- Desktop Navigation -->
      <nav class="blog-nav desktop-nav">
        <a href="/" class="nav-link">
          <span class="nav-symbol">&gt;</span> home
        </a>
        <a href="/about" class="nav-link">
          <span class="nav-symbol">&gt;</span> about
        </a>
        <a href="/projects" class="nav-link">
          <span class="nav-symbol">&gt;</span> projects
        </a>
        <a href="/blog" class="nav-link">
          <span class="nav-symbol">&gt;</span> blog
        </a>
        <div class="space-toggle">
          <span class="toggle-link toggle-active">Professional</span>
          <a href="/photography" class="toggle-link toggle-inactive">Personal</a>
        </div>
      </nav>

      <!-- Mobile Hamburger -->
      <button class="hamburger-btn" id="blog-hamburger-btn" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </header>

  <!-- Mobile Menu Drawer -->
  <div class="mobile-menu" id="blog-mobile-menu">
    <div class="mobile-menu-overlay" id="blog-mobile-menu-overlay"></div>
    <nav class="mobile-menu-content">
      <div class="mobile-menu-header">
        <h2>$ menu</h2>
        <button class="mobile-menu-close" id="blog-mobile-menu-close" aria-label="Close menu">Ã—</button>
      </div>
      <div class="mobile-menu-links">
        <a href="/" class="mobile-menu-link">
          <span class="nav-symbol">&gt;</span> home
        </a>
        <a href="/about" class="mobile-menu-link">
          <span class="nav-symbol">&gt;</span> about
        </a>
        <a href="/projects" class="mobile-menu-link">
          <span class="nav-symbol">&gt;</span> projects
        </a>
        <a href="/blog" class="mobile-menu-link">
          <span class="nav-symbol">&gt;</span> blog
        </a>
      </div>
      <div class="mobile-menu-divider"></div>
      <div class="mobile-space-toggle">
        <p class="mobile-space-label">SPACE</p>
        <div class="space-toggle">
          <span class="toggle-link toggle-active">Professional</span>
          <a href="/photography" class="toggle-link toggle-inactive">Personal</a>
        </div>
      </div>
    </nav>
  </div>

  <main class="blog-main">
    <slot />
  </main>

  <footer class="blog-footer">
    <p>
      <span class="footer-symbol">~/guru.dev $</span> echo "Built with curiosity and code" | figlet
    </p>
  </footer>

  <script type="module" src={Astro.resolve('../scripts/blog-layout-interactions.ts')}></script>

  <style>
    :root {
      --slate-950: #020617;
      --slate-900: #0f172a;
      --slate-800: #1e293b;
      --slate-700: #334155;
      --terminal-green: #22c55e;
      --terminal-cyan: #06b6d4;
      --terminal-yellow: #eab308;
      --terminal-red: #ef4444;
      --terminal-gray: #94a3b8;
    }

    /* Disable long-press context menu on images (iOS) */
    :global(img) {
      -webkit-touch-callout: none;
      -webkit-user-select: none;
      user-select: none;
    }

    body.blog-space {
      background: var(--slate-950);
      color: var(--terminal-green);
      font-family: 'JetBrains Mono', monospace;
      font-weight: 400;
      line-height: 1.8;
      margin: 0;
      padding: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      position: relative;
    }

    /* Scanlines Effect */
    .scanlines {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: repeating-linear-gradient(
        0deg,
        rgba(0, 0, 0, 0.15),
        rgba(0, 0, 0, 0.15) 1px,
        transparent 1px,
        transparent 2px
      );
      pointer-events: none;
      z-index: 9999;
      opacity: 0.4;
    }

    /* Space Toggle - Rectangular Terminal Style */
    .space-toggle {
      display: flex;
      align-items: center;
      background: var(--slate-800);
      border: 1px solid var(--terminal-cyan);
      padding: 0;
      gap: 0;
    }

    .toggle-link {
      padding: 0.5rem 1rem;
      text-decoration: none;
      font-size: 0.75rem;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      transition: all 0.2s ease;
      color: var(--terminal-cyan);
      border-right: 1px solid var(--terminal-cyan);
    }

    .toggle-link:last-child {
      border-right: none;
    }

    .toggle-link.toggle-inactive {
      color: var(--terminal-gray);
    }

    .toggle-link.toggle-inactive:hover {
      background: var(--terminal-cyan);
      color: var(--slate-950);
      box-shadow: 0 0 10px rgba(6, 182, 212, 0.5);
    }

    .toggle-link.toggle-active {
      background: var(--terminal-cyan);
      color: var(--slate-950);
      cursor: default;
      box-shadow: 0 0 10px rgba(6, 182, 212, 0.5);
    }

    /* Header - Terminal Prompt Style */
    .blog-header {
      padding: 2rem 2rem 1.5rem;
      border-bottom: 1px solid var(--slate-800);
      background: var(--slate-900);
    }

    .header-content {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .terminal-prompt {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .prompt-symbol {
      color: var(--terminal-cyan);
      font-size: 1.5rem;
      font-weight: 700;
    }

    .site-title {
      margin: 0;
      font-size: 1.75rem;
      font-weight: 700;
      letter-spacing: -0.02em;
    }

    .site-title a {
      color: var(--terminal-green);
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .site-title a:hover {
      color: var(--terminal-yellow);
      text-shadow: 0 0 10px var(--terminal-yellow);
    }

    .cursor {
      display: inline-block;
      animation: blink 1s step-end infinite;
      color: var(--terminal-cyan);
    }

    @keyframes blink {
      0%, 50% { opacity: 1; }
      51%, 100% { opacity: 0; }
    }

    /* Navigation - Command Style */
    .blog-nav {
      display: flex;
      gap: 2rem;
      align-items: center;
    }

    .nav-link {
      color: var(--terminal-gray);
      text-decoration: none;
      font-size: 0.9rem;
      font-weight: 400;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      transition: all 0.3s ease;
      padding: 0.5rem 0;
    }

    .nav-symbol {
      color: var(--terminal-cyan);
      transition: transform 0.3s ease;
    }

    .nav-link:hover {
      color: var(--terminal-green);
    }

    .nav-link:hover .nav-symbol {
      transform: translateX(4px);
      color: var(--terminal-yellow);
    }

    /* Main Content */
    .blog-main {
      flex: 1;
      padding: 3rem 2rem;
      max-width: 1200px;
      margin: 0 auto;
      width: 100%;
    }

    /* Footer - Terminal Style */
    .blog-footer {
      padding: 2rem;
      text-align: center;
      border-top: 1px solid var(--slate-800);
      background: var(--slate-900);
      color: var(--terminal-gray);
      font-size: 0.75rem;
    }

    .footer-symbol {
      color: var(--terminal-cyan);
    }

    /* Hamburger Button */
    .hamburger-btn {
      display: none;
      flex-direction: column;
      justify-content: space-between;
      width: 28px;
      height: 22px;
      background: transparent;
      border: none;
      cursor: pointer;
      padding: 0;
      z-index: 101;
    }

    .hamburger-btn span {
      display: block;
      width: 100%;
      height: 3px;
      background: var(--terminal-green);
      border-radius: 2px;
      transition: all 0.3s ease;
      box-shadow: 0 0 5px rgba(34, 197, 94, 0.5);
    }

    .hamburger-btn:hover span {
      background: var(--terminal-cyan);
      box-shadow: 0 0 10px rgba(6, 182, 212, 0.8);
    }

    /* Mobile Menu */
    .mobile-menu {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 999;
      visibility: hidden;
      opacity: 0;
      transition: visibility 0.3s, opacity 0.3s;
    }

    .mobile-menu.active {
      visibility: visible;
      opacity: 1;
    }

    .mobile-menu-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(2, 6, 23, 0.9);
      backdrop-filter: blur(4px);
    }

    .mobile-menu-content {
      position: absolute;
      top: 0;
      right: 0;
      width: 280px;
      height: 100%;
      background: var(--slate-900);
      border-left: 2px solid var(--terminal-cyan);
      box-shadow: -8px 0 32px rgba(6, 182, 212, 0.2);
      transform: translateX(100%);
      transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      overflow-y: auto;
      display: flex;
      flex-direction: column;
      padding: 2rem;
    }

    .mobile-menu.active .mobile-menu-content {
      transform: translateX(0);
    }

    .mobile-menu-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid var(--terminal-cyan);
    }

    .mobile-menu-header h2 {
      font-family: 'JetBrains Mono', monospace;
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--terminal-green);
      margin: 0;
      text-shadow: 0 0 10px rgba(34, 197, 94, 0.5);
    }

    .mobile-menu-close {
      width: 36px;
      height: 36px;
      border: 1px solid var(--terminal-cyan);
      background: var(--slate-800);
      color: var(--terminal-cyan);
      font-size: 1.75rem;
      font-weight: 300;
      cursor: pointer;
      border-radius: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s ease;
      line-height: 1;
      padding: 0;
    }

    .mobile-menu-close:hover {
      background: var(--terminal-cyan);
      color: var(--slate-950);
      transform: rotate(90deg);
      box-shadow: 0 0 15px rgba(6, 182, 212, 0.8);
    }

    .mobile-menu-links {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .mobile-menu-link {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 1rem;
      color: var(--terminal-gray);
      text-decoration: none;
      font-size: 1rem;
      font-weight: 400;
      border-left: 2px solid transparent;
      transition: all 0.2s ease;
    }

    .mobile-menu-link .nav-symbol {
      color: var(--terminal-cyan);
      transition: transform 0.2s ease;
    }

    .mobile-menu-link:hover {
      background: var(--slate-800);
      color: var(--terminal-green);
      border-left-color: var(--terminal-green);
      transform: translateX(4px);
      box-shadow: inset 0 0 10px rgba(34, 197, 94, 0.1);
    }

    .mobile-menu-link:hover .nav-symbol {
      transform: translateX(4px);
      color: var(--terminal-yellow);
    }

    .mobile-menu-divider {
      height: 1px;
      background: var(--slate-800);
      margin: 1.5rem 0;
      box-shadow: 0 0 5px rgba(6, 182, 212, 0.3);
    }

    .mobile-space-toggle {
      margin-top: auto;
      padding-top: 1.5rem;
    }

    .mobile-space-label {
      font-size: 0.75rem;
      font-weight: 600;
      color: var(--terminal-cyan);
      text-transform: uppercase;
      letter-spacing: 0.1em;
      margin: 0 0 0.75rem;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .blog-header {
        padding: 1.5rem 1rem;
      }

      .header-content {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
      }

      .site-title {
        font-size: 1.25rem;
      }

      .prompt-symbol {
        font-size: 1.25rem;
      }

      /* Hide desktop nav, show hamburger */
      .desktop-nav {
        display: none;
      }

      .hamburger-btn {
        display: flex;
      }

      .blog-main {
        padding: 2rem 1rem;
      }
    }

    /* Terminal Glow Effects */
    .blog-space::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: radial-gradient(
        ellipse at center,
        rgba(6, 182, 212, 0.1) 0%,
        transparent 50%
      );
      pointer-events: none;
      z-index: 1;
    }

    /* Animations */
    @keyframes fadeInTerminal {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .blog-header,
    .blog-main > * {
      animation: fadeInTerminal 0.4s ease-out backwards;
    }

    .blog-header {
      animation-delay: 0.05s;
    }

    .blog-main > *:nth-child(1) { animation-delay: 0.1s; }
    .blog-main > *:nth-child(2) { animation-delay: 0.15s; }
    .blog-main > *:nth-child(3) { animation-delay: 0.2s; }
  </style>
</body>
</html>
